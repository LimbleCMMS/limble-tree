{
   "name": "limble-tree",
   "version": "0.0.0",
   "engines": {
      "node": "^16.16.0"
   },
   "scripts": {
      "build": "ng build",
      "dev:limble-tree": "rm -rf dist/limble-tree && npx ng build limble-tree --watch",
      "dev:sandbox": "rm -rf dist/sandbox && npx ng serve sandbox --open",
      "format": "prettier ./ --write",
      "format:check": "prettier ./ --check",
      "lint": "eslint \"projects/limble-tree/src\" \"projects/sandbox/src\" --cache --cache-location eslint/.eslintcache --ext .js --ext .ts --ext .html",
      "ng": "ng",
      "publishPackage": "npm run build && cd dist/limble-tree && npm publish",
      "start": "ng serve",
      "test": "ng test",
      "test:limble-tree": "ng test limble-tree",
      "test:sandbox": "ng test sandbox"
   },
   "private": true,
   "dependencies": {
      "@angular/animations": "^14.2.0",
      "@angular/common": "^14.2.0",
      "@angular/compiler": "^14.2.0",
      "@angular/core": "^14.2.0",
      "@angular/forms": "^14.2.12",
      "@angular/platform-browser": "^14.2.0",
      "@angular/platform-browser-dynamic": "^14.2.12",
      "@angular/router": "^14.2.12",
      "rxjs": "^7.8.0",
      "tslib": "^2.5.0",
      "zone.js": "^0.11.8"
   },
   "devDependencies": {
      "@angular-devkit/build-angular": "^14.2.10",
      "@angular-eslint/builder": "^14.4.0",
      "@angular-eslint/eslint-plugin": "^14.1.2",
      "@angular-eslint/eslint-plugin-template": "^14.1.2",
      "@angular-eslint/schematics": "^14.4.0",
      "@angular-eslint/template-parser": "^14.4.0",
      "@angular/cli": "~14.2.9",
      "@angular/compiler-cli": "^14.2.12",
      "@types/jasmine": "~4.0.0",
      "@typescript-eslint/eslint-plugin": "~5.42.1",
      "@typescript-eslint/parser": "~5.42.1",
      "eslint": "~8.27.0",
      "eslint-plugin-eslint-comments": "~3.2.0",
      "eslint-watch": "~8.0.0",
      "jasmine-core": "~4.3.0",
      "karma": "~6.4.0",
      "karma-chrome-launcher": "~3.1.0",
      "karma-coverage": "~2.2.0",
      "karma-jasmine": "~5.1.0",
      "karma-jasmine-html-reporter": "~2.0.0",
      "ng-packagr": "^14.2.2",
      "prettier": "2.7.1",
      "typescript": "~4.7.2"
   },
   "prettier": {
      "printWidth": 80,
      "tabWidth": 3,
      "useTabs": false,
      "semi": true,
      "singleQuote": false,
      "quoteProps": "consistent",
      "trailingComma": "none",
      "bracketSpacing": true,
      "arrowParens": "always",
      "proseWrap": "preserve",
      "htmlWhitespaceSensitivity": "css",
      "endOfLine": "lf"
   }
}
